<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context=".Fragments.TourneyFragment">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@color/blackgrey"
        android:id="@+id/rcv_categButtons">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <SearchView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:queryHint="Search by tourney i'd"
                android:layout_gravity="center"
                android:background="@drawable/button_backg"
                android:backgroundTint="@color/pink"
                android:id="@+id/search_view"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rcv_categButtons1"
                android:layout_margin="6dp"
                android:background="@drawable/button_backg"
                android:text="FREEFIRE"
                android:fontFamily="sans-serif-black"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rcv_categButtons2"
                android:layout_margin="6dp"
                android:background="@drawable/button_backg"
                android:text="BGMI"
                android:fontFamily="sans-serif-black"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rcv_categButtons3"
                android:layout_margin="6dp"
                android:background="@drawable/button_backg"
                android:text="COD"
                android:fontFamily="sans-serif-black"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rcv_categButtons4"
                android:layout_margin="6dp"
                android:background="@drawable/button_backg"
                android:text="PUBG"
                android:fontFamily="sans-serif-black"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rcv_categButtons5"
                android:layout_margin="6dp"
                android:background="@drawable/button_backg"
                android:text="VALORANT"
                android:fontFamily="sans-serif-black"/>

        </LinearLayout>
    </HorizontalScrollView>



    <com.google.android.material.progressindicator.LinearProgressIndicator
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        app:indicatorColor="@color/pink"
        app:trackColor="@color/black"
        app:trackCornerRadius="20dp"
        android:id="@+id/progress_bar"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rcv_bg"
        android:id="@+id/rcv"/>

</LinearLayout>